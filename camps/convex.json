{
  "$schema": "./node_modules/convex/schemas/convex.schema.json",
  "typescriptCompiler": "tsgo",
  "authKit": {
    "dev": {
      "configure": {
        "redirectUris": ["http://localhost:3000/callback"],
        "appHomepageUrl": "http://localhost:3000",
        "corsOrigins": ["http://localhost:3000"]
      },
      "localEnvVars": {
        "WORKOS_CLIENT_ID": "${authEnv.WORKOS_CLIENT_ID}",
        "WORKOS_API_KEY": "${authEnv.WORKOS_API_KEY}",
        "NEXT_PUBLIC_WORKOS_REDIRECT_URI": "http://localhost:3000/callback"
      }
    },
    "preview": {
      "configure": {
        "redirectUris": ["https://${buildEnv.VERCEL_BRANCH_URL}/callback"],
        "appHomepageUrl": "https://${buildEnv.VERCEL_PROJECT_PRODUCTION_URL}",
        "corsOrigins": ["https://${buildEnv.VERCEL_BRANCH_URL}"]
      }
    },
    "prod": {
      "configure": {
        "redirectUris": [
          "https://boscamps.com/callback",
          "https://pdxcamps.com/callback",
          "https://campweeks.netlify.app/callback",
          "https://seattlecampguide.com/callback",
          "https://sfbaycamps.com/callback",
          "https://dencamps.com/callback",
          "https://phxcamps.com/callback",
          "https://alldallascamps.com/callback",
          "https://atxcamps.com/callback",
          "https://mixcamps.com/callback"
        ],
        "appHomepageUrl": "https://pdxcamps.com",
        "corsOrigins": [
          "https://boscamps.com",
          "https://www.boscamps.com",
          "https://pdxcamps.com",
          "https://www.pdxcamps.com",
          "https://campweeks.netlify.app",
          "https://seattlecampguide.com",
          "https://www.seattlecampguide.com",
          "https://sfbaycamps.com",
          "https://www.sfbaycamps.com",
          "https://dencamps.com",
          "https://www.dencamps.com",
          "https://phxcamps.com",
          "https://www.phxcamps.com",
          "https://alldallascamps.com",
          "https://www.alldallascamps.com",
          "https://atxcamps.com",
          "https://www.atxcamps.com",
          "https://mixcamps.com",
          "https://www.mixcamps.com"
        ]
      }
    }
  }
}
